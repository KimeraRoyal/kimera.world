<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% if data.hidden == true %}
      <meta name="robots" content="noindex" />
    {% endif %}
    {% render "head", metadata: site.metadata, title: data.title %}
  </head>
  {% if data.page_class %}
    {% assign body_class = data.layout | append: '-' | append: data.page_class %}
  {% else %}
    {% assign body_class = data.layout %}
  {% endif  %}
  <body class="{{ body_class }}">
    <main>
      {{ content }}
    </main>
  </body>
</html>
