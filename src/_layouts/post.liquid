---
layout: default
---

<header>
    <h1>{{ data.title }}</h1>
    <h2>{{ data.subtitle }}</h2>
    <hr class="header-divider" />
</header>

{{ content }}

<div class="project-tags">
    <a href="/posts/{{ data.category | replace: " ", "-" }}"><div class="project-tag"><img src="/images/posts/icon_{{ data.category | replace: " ", "_" }}.png" /> {{ data.category }}</div></a>
    {% for tag in data.tags %}
        <a href="/posts/{{ tag | replace: " ", "-" }}"><div class="project-tag">{{ tag }}</div></a>
    {% endfor %}
</div>